  align-items: center;
}

.tab_search-icon {
  padding-left: 16rpx;
  padding-top:26rpx;
}

.tab_search-text {
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
  padding-left: 10rpx;
}

.tab_address-text {
  font-size: 32rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(250, 132, 91, 1);
}

.tab_address-img {
  width: 25rpx;
  height: 25rpx;
  margin-left: 13rpx;
}

.banner {
  width: 750rpx;
  height: 340rpx;
  margin-bottom: 20rpx;
}

