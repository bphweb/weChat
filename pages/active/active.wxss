@import "../../templates/content/content.wxss";
.header {
  padding: 16rpx 24rpx;
  background: rgba(239, 239, 244, 1);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size:26rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(0,0,0,1);
}

.header_search {
  width: 580rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(230, 230, 234, 1);
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header_search-icon {
  padding-left: 16rpx;
}

.header_search-input {
  width: 100%;
  height: 30rpx;
  padding-left: 10rpx;
  caret-color: rgba(250,132,91,1);
}

.holder_input {
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
}
/* .header_address{
  display: flex;
  align-items: center;
} */
.header_address-title{
  font-size:32rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(250,132,91,1);
}
.header_address-img{
  width: 25rpx;
  height: 25rpx;
  margin-left: 13rpx;
}

.tab{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  overflow: hidden;
  font-size:34rpx;
  white-space: nowrap;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(31,31,31,1);
}
.tabevery{
  width: 20%;
  display: inline-block;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.container_swiper {
  zoom: 1;
}
.tab_checked {
  font-size:36rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(250,132,91,1);
}

.container_wapper{
  padding-bottom: 23rpx;
  border-bottom: 1rpx solid rgba(214,214,219,1);
}
.container_sort{
  margin-top: 20rpx;
}
.container_sort-title{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size:32rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(31,31,31,1);
}
.sort_img{
  width: 28rpx;
  height: 18rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}
.item_data{
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 60rpx;
  border-bottom: 1rpx solid rgba(214,214,219,1);
  font-size:32rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(31,31,31,1);
}
.item_data:nth-last-child(1){
  border: none;
}
.container_sort-list{
  position: absolute;
  z-index: 999;
  width: 100%;
  background: white;
}
.hidden_block{
  display: none;
}
.active{
  display: block;
}
