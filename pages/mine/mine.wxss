.my_page{
  background:rgba(239,239,244,1);
}

.header {
  width: 100%;
  height: 360rpx;
  background: white;
  margin-bottom: 16rpx;
}

.avator {
  text-align: center;
  height: 340rpx;
  background: linear-gradient(-5deg, rgba(247, 94, 41, 1) 0%, rgba(251, 212, 166, 1) 88%);
  opacity: 0.86;
}

.avator_img {
  width: 120rpx;
  height: 120rpx;
  margin-top: 89rpx;
  border: 3rpx solid rgba(255, 255, 255, 1);
  background: linear-gradient(0deg, rgba(255, 255, 255, 1) 0%, rgba(229, 69, 50, 1) 100%);
  border-radius: 50%;
}

.nickname {
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
}

.center {
  font-size: 30rpx;
  background-color: white;
  margin-bottom: 16rpx;
}

.center_top {
  width: 100%;
  border-bottom: 1rpx solid rgba(214,214,219,1);
}

.my_active {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 23rpx;
  padding-right: 30rpx;
}

.active_img {
  width:19rpx;
  height:36rpx;
  border-radius:1px;
}

.center_bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 26rpx 0;
}

.center_bottom_img {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.center_bottom_classify {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sign {
  font-size: 30rpx;
  background-color: white;
  border-bottom: 1rpx solid rgba(214,214,219,1);
}
