.detail_page {
  background: rgba(239, 239, 244, 1);
}

.header {
  background: white;
  margin-bottom: 16rpx;
}

.header_img {
  width: 100%;
  height: 340rpx;
}

.header_des-title {
  padding-left: 26rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(31, 31, 31, 1);
  line-height: 66rpx;
}

.header_des-browse {
  padding-left: 24rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(126, 126, 126, 1);
  line-height: 66rpx;
  display: flex;
  flex-direction: row;
}

.header_des-collection {
  padding-left: 78rpx;
}

.header_des-text {
  padding-left: 10rpx;
}

.header_des-time {
  padding-left: 24rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(79, 79, 79, 1);
  line-height: 66rpx;
  border-bottom: 1rpx solid rgba(214, 214, 219, 1);
}

.header_des-time:nth-last-child(1) {
  border-bottom: none;
}

.header_des-icon {
  width: 24rpx;
  height: 24rpx;
}

.header_des-icon:nth-last-child(1) {
  width: 22rpx;
  height: 28rpx;
}

.header_des-char {
  padding-left: 19rpx;
}

.activity_detail {
  /* padding: 20rpx 24rpx; */
  background: white;
}

.activity_detail-title {
  padding-left: 26rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(31, 31, 31, 1);
  line-height: 66rpx;
}

.activity_detail-des {
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(55, 55, 55, 1);
  line-height: 39rpx;
  margin-bottom: 19rpx;
  padding: 20rpx 41rpx 20rpx 24rpx;
}

.activity_detail-more {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(250, 132, 91, 1);
  line-height: 39rpx;
  float: right;
  margin-right:25rpx;
}
.hidden{
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
}
.footer {
  width: 750rpx;
  height: 98rpx;
  background: rgba(247, 247, 250, 1);
  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
  align-items: center;
  position: fixed;
  bottom: 0;
}

.footer_collection {
  display: flex;
  flex-direction: column;
  padding-left: 82rpx;
}

.footer_collection-img {
  width: 44rpx;
  height: 44rpx;
}

.footer_collection-text {
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.footer_signup {
  width: 360rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-right: 39rpx;
  background: rgba(252, 121, 24, 1);
  border-radius: 10rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
