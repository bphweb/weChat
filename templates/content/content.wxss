.content_wrapper{
  border-bottom: 1rpx solid rgba(214, 214, 219, 1);
}
.content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 24rpx;
}

.content_left {
  width: 320rpx;
  height: 240rpx;
  border-radius: 10rpx;
}

.content_right-title {
  width: 330rpx;
  height: 74rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(31, 31, 31, 1);
  line-height: 48rpx;
}

.content_right-date {
  width: 133rpx;
  height: 25rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(79, 79, 79, 1);
  line-height: 39rpx;
  padding-top: 30rpx;
}

.content_right-classify {
  width: 100rpx;
  height: 41rpx;
  line-height: 32rpx;
  text-align: center;
  background: rgba(255, 243, 217, 1);
  border-radius: 10rpx;
  margin-top: 21rpx;
  float: right;
}

.content_right-text {
  width: 66rpx;
  height: 24rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(79, 79, 79, 1);
}

.content_right-address {
  /* width:101rpx; */
  height: 25rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(79, 79, 79, 1);
  line-height: 39rpx;
  padding-top: 19rpx;
}

.content_right-btn {
  width: 152rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 1rpx solid rgba(250, 132, 91, 1);
  background: white;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(79, 79, 79, 1);
  margin-top: 11rpx;
  padding-left: 0;
  padding-right: 0;
  text-align: center;
  float: right;
}
.content_right-btn::after{
  border: none;
}


